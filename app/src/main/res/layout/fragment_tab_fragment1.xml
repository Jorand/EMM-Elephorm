<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:paddingTop="10dp"
    android:background="#ffffff">

    <!--
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/tab_title_1"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    -->

    <ListView
        android:id="@+id/home_list_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_container_border"
        android:layout_below="@+id/home_list_1">

        <TextView
            android:id="@+id/TestheaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/ColorTitle"
            android:text="Recommandations" />

        <ListView
            android:id="@+id/home_list_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_list_2"
            android:text="Afficher plus"/>

    </RelativeLayout>



</RelativeLayout>